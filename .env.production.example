# Production Environment Variables for YuhHearDem
# Copy this file to .env on the server and fill in the values

# Database
# IMPORTANT: Use the same password as POSTGRES_PASSWORD below
# The hostname 'yhd-postgres' is the container name from docker-compose.postgres.yml
DATABASE_URL=postgresql+asyncpg://yuhheardem:YOUR_SECURE_PASSWORD@yhd-postgres:5432/yuhheardem
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD

# API Keys
GOOGLE_API_KEY=your_google_api_key_here

# Application Settings
APP_ENV=production
DEBUG=False
CORS_ORIGINS=["https://yuhheardem.com", "https://www.yuhheardem.com"]

# Server (for uvicorn - defaults in config.py)
HOST=0.0.0.0
PORT=8000

# Logging
LOG_LEVEL=info

# Storage Paths
STORAGE_PATH=/app/storage
PROCESSED_PATH=/app/processed

# Database Connection Pool (tune based on workload)
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=5
